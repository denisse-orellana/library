<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Status</th>
      <th>Isbn</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="books">
    <% @books.each do |book| %>
      <%= render 'books/book', book: book %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
